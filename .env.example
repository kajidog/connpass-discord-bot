# Discord Bot
DISCORD_BOT_TOKEN=
DISCORD_APPLICATION_ID=

# Connpass API
CONNPASS_API_KEY=

# AI Provider API Keys (使用するプロバイダーのみ設定)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_GENERATIVE_AI_API_KEY=

# データ保存先 (オプション)
# admins.json / bans.json もこのディレクトリに保存されます
JOB_STORE_DIR=./data

# ストレージタイプ (オプション)
# file: JSONファイルベース (デフォルト)
# sqlite: SQLite (Drizzle ORM)
STORAGE_TYPE=sqlite

# SQLite使用時のデータベースパス (オプション)
# STORAGE_TYPE=sqlite の場合に使用
DATABASE_URL=./data/app.db

# AIエージェント有効化 (オプション、デフォルトtrue)
ENABLE_AI_AGENT=true

# エージェントメモリDB (オプション)
AGENT_DATABASE_URL=file:./data/agent-memory.db

# イベント通知機能 (オプション)
# 参加予定イベント開始前にDMで通知（SQLiteストレージ必須）
ENABLE_EVENT_NOTIFY=true
DEFAULT_NOTIFY_MINUTES_BEFORE=15
NOTIFY_CHECK_INTERVAL_MS=60000
