# Discord
DISCORD_BOT_TOKEN=
DISCORD_APPLICATION_ID=
# Optional: set for guild-scoped command registration
# DISCORD_GUILD_ID=

# Connpass
CONNPASS_API_KEY=

# Job persistence (optional). Use an absolute path in Docker.
JOB_STORE_DIR=./data/jobs

# Mastra (AI summary)
# Base URL for the Mastra Agent API used by /connpass report run ai:true
# In docker-compose it's set to http://mastra:4111 by default for the bot service
# MASTRA_BASE_URL=http://localhost:4111

# API key for LLM provider used by Mastra (required when running Mastra service)
OPENAI_API_KEY=

# Optional telemetry toggle for Mastra
MASTRA_TELEMETRY_DISABLED=1

# Mastra Agent API (optional). When set, /connpass report run can use AI summary via Mastra.
# e.g., http://localhost:4111
# MASTRA_BASE_URL=

# スケジュールモード: interval（従来）または scheduled（新方式）
SCHEDULE_MODE=scheduled
